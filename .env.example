# Database connection
DATABASE_URL="postgresql://postgres:1234@localhost:5432/fumylimp_db?schema=public"

# Application
PORT=3001
HOST=localhost
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_PATH=./uploads

# Business Logic
DEFAULT_PICKUP_HOURS=24
DEFAULT_DELIVERY_HOURS=48
INVENTORY_ALERT_THRESHOLD=20 # percentage

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Cors Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=infog Configuration
LOG_LEVEL=infog Configuration
LOG_LEVEL=info